<% provide(:title, 'Upcoming Appointments') %>
<h1>Upcoming Appointments</h1>


<ul class="appointments">
  <% @appointments.each do |appointment| %>
    <li>
       <%= link_to appointment.title, appointment %>
       
       <%= link_to 'Edit',  edit_appointment_path(appointment) , {:class => 'linkedTo'} %>

       <%= link_to 'Cancel', appointment,   method: :delete,  
                                     data: { confirm: "You sure?" },
                                    title: appointment.title, :class => 'linkedTo'
                                       %>

    </li>
  <% end %>
</ul>



<%= link_to 'New Appointment', new_appointment_path %>
<%= link_to "Back to Home", root_url %>