<% provide(:title, 'All Appointments') %>
<h1>All Appointments of Residence <%= @residence.id %></h1>

<ul class="appointments">
  <% @appointments.each do |appointment| %>
    <li>
       <%= link_to appointment.title, residence_appointment_path(@residence,appointment) %> </br>
       Start: <%= appointment.start %> </br>
       Doctor: <%= Doctor.find(@residence.doctor_id).name %> </br>
       <%= link_to 'Edit',  edit_residence_appointment_path(@residence, appointment) , {:class => 'linkedTo'} %>

       <%= link_to 'Cancel', residence_appointment_path(@residence, appointment),   method: :delete,
                                    data: { confirm: "You sure?" },
                                    title: appointment.title, :class => 'linkedTo'
                                       %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Appointment', new_residence_appointment_path, class: "btn btn-large btn-primary"  %>
<%= link_to "Back to Home", root_url,  class: "btn btn-large btn-primary" %>

