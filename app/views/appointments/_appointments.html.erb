<% provide(:title, 'Appointments') %>
<h1>Appointments</h1>

<ul class="appointments">
  <% @appointments.each do |appointment| %>
    <li>
       <%= link_to appointment.title, residence_appointment_path(Residence.find(appointment.residence_id),appointment) %>
       
       <%= link_to 'Edit',  edit_residence_appointment_path(Residence.find(appointment.residence_id), appointment) , {:class => 'linkedTo'} %>

       <%= link_to 'Cancel', residence_appointment_path(Residence.find(appointment.residence_id),   method: :delete,
                                    data: { confirm: "You sure?" },
                                    title: appointment.title, :class => 'linkedTo'
                                       %>

    </li>
  <% end %>
</ul>

<%= link_to 'New Appointment', new_residence_appointment_path, class: "btn btn-large btn-primary"  %>
<%= link_to "Back to Home", root_url,  class: "btn btn-large btn-primary" %>
