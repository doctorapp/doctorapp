<% provide(:title, 'All doctors') %>

<h1>All doctors</h1>

<div class="row">
	<div class="span6 offset3">
	<%= form_tag doctors_path, id: 'doctors_search', method: 'get' do %>
  	<p>
  	  <%= text_field_tag :search, params[:search] %>
  	  <%= submit_tag "Search", name: nil, class: "btn btn-large btn-primary" %>
  	</p>
	<% end %>

	<div id="doctors"><%= render 'doctors' %></div>

	</div>
</div>
	

