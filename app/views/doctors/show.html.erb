<% provide(:title, @doctor.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @doctor, size:40 %>
				<%= @doctor.name %>
			</h1>
		</section>
		<section>
			<%= render 'favorite_form' if ( signed_in? && current_user.type == 'Patient') %>
		</section>
	</aside>

	<div class="span8">
		<%= render 'shared/calendar' %>
		<div id='calendar'></div>
	</div>
	
	<div id = "desc_dialog" title="Appointment Details" >
 		<div id = "event_desc">
		</div>

		<br/>
  		<br/>
  		
  		<div id = "event_actions">
    		<span id = "edit_event"></span>
    		<span id = "delete_event"></span>
  		</div>
	</div>

	<div id = "create_event_dialog"><!-- style ="display:none;"-->
  		<div id = "create_event">
  		</div>
	</div>

</div>
