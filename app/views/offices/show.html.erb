<% provide(:title, @title) %>

<div class="row">
	<aside class="span4">
  	<section>
    	<%= gravatar_for @office %>
    	<h1><%= @office.name %></h1>
    	<span><%= link_to "view office profile", @office %></span>
  	</section>

		<section>
    	<div class="span8">
  			<h3><%= 'Resident doctors' %></h3>
  			<% if @doctors.any? %>
    			<ul class="users">
      			<%= render @doctors %>
    			</ul>
    			<%= will_paginate @doctors %>
  			<% end %>
			</div>
    
 	 	</section>
	</aside>
</div>
