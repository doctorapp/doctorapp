<% provide(:title, "Vacation") %>
<div class="row">
	<div class="span6 offset3">
		<section>
			<h1>Vacation</h1>
			Start: <%= @vacation.start %></br>
			End: <%= @vacation.end %></br>
		</section>
		<% if signed_in? %>
		    <% @doctor = Doctor.find(@vacation.doctor_id) %>
			<%= link_to 'Delete', doctor_vacation_path(@doctor,@vacation), method: :delete, data: {confirm: "You sure?"} %>  <!-- DELETE request is faked with javascript -->
		<% end %>
	</div>
</div>
